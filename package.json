{
	"name": "dynamic-snippets",
	"displayName": "Dynamic Snippets",
	"description": "VSCode dynamic JavaScript snippets",
	"version": "0.1.1",
	"publisher": "loonskai",
	"repository": {
    "type": "git",
    "url": "https://github.com/loonskai/dynamic-snippets"
	},
	"license": "MIT",
	"keywords": [
		"javascript",
		"js",
		"typescript",
		"ts",
		"snippets"
	],
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": ["*"],
	"icon": "icon.png",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.expandAbbreviation",
				"title": "expand Abbreviation"
			}
		],
		"keybindings": [
			{
				"command": "extension.expandAbbreviation",
				"key": "tab",
				"when": "editorTextFocus && !inSnippetMode"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"package": "vsce package",
		"publish": "vsce publish",
		"pretest": "npm run test-compile && npm install",
		"test": "node ./out/test/runTest.js",
		"test-compile": "node ./scripts/clean.js && npm run compile",
		"version": "node ./scripts/version.js && git add CHANGELOG.md",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^2.10.0",
		"@typescript-eslint/parser": "^2.10.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-prettier": "^3.1.1",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"vsce": "^1.70.0",
		"vscode-test": "^1.2.0"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"env": {
			"node": true,
			"browser": true,
			"es6": true,
			"mocha": true
		},
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint/eslint-plugin",
			"prettier"
		],
		"rules": {
			"no-console": "warn"
		}
	},
	"dependencies": {
		"dynamic-snippets-generator": "^1.0.0"
	}
}
